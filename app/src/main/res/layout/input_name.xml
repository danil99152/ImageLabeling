<android.support.design.widget.TextInputLayout
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar" layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter name"
            android:maxLines="1" tools:ignore="HardcodedText"/>

</android.support.design.widget.TextInputLayout>

